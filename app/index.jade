doctype html
html(ng-app='app')
  head
    base(href="/")
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    title(ng-bind-template='{{pageTitle}}')
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="/css/app.css")
    meta(name="description", content="")
    meta(name="author", content="")
    //-script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
    //if lte IE 7
      script(src='http://cdnjs.cloudflare.com/ajax/libs/json2/20110223/json2.js')
    //if lte IE 8
      script(src='//html5shiv.googlecode.com/svn/trunk/html5.js')
    script(src='/js/vendor.js')
    script(src='/js/app.js')
    script(src='/js/app.templates.js')
  body(ng-controller='AppCtrl')
    .wrapper
      .navbar.navbar-static-top
        .container
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a(href='/').navbar-brand Angular Brunch Seed
          .collapse.navbar-collapse
            div(ng-include="'app/navbar/partial.jade'")
      .container.main-content
        div(ui-view)
        div Angular Brunch seed app: v<span app-version></span>
      .push

    footer.footer
      .container
        p
          small
            a(href='https://github.com/smokku/brunch-with-dragons') Brunch with Dragons | source
